BIN=~/bin
if [ `pwd` = $BIN ]; then
    echo "Don't launch $0 in $BIN" >& 2
elif mkdir -p $BIN; then
    for cmd in *; do
        case $cmd in
        `basename $0` | "README.md" | "downloader" )
            ;;  # do nothing
        *)
            echo "Copy $cmd ... to $BIN/"
            cp $cmd $BIN/
            ;;
        esac
    done
fi
