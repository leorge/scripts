BIN=~/bin
if [ `pwd` = $BIN ]; then
    echo "Don't launch $0 in $BIN" >& 2
elif mkdir -p $BIN; then
    for cmd in *; do
        case $cmd in
        `basename $0` | "README.md" | "downloader" )
            ;;  # do nothing
        *)
            cp $cmd $BIN/ # && echo $0: $cmd is copied. >&2
            ;;
        esac
    done
fi
