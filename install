if [ -d ~/bin/scripts ]; then   # already installed
    cd ~/bin/scripts
    git pull
else
    mkdir -p ~/bin
    cd ~/bin
    if ! which git > /dev/null ; then  # install git(1)
        wget -N https://github.com/leorge/scripts/raw/master/inst_cmd
        chmod +x inst_cmd && ./inst_cmd git
    fi
    git clone https://github.com/leorge/scripts.git
fi
cd ~/bin/scripts
for cmd in *; do
    if [ $cmd = "READ.ME" ]; then
    elif [ $cmd = `basename $0` ]; then
    else
        cp $cmd ..
    fi
done
