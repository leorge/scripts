if [ -x esd.awk ]; then   # in the repository
    git pull > /dev/null
else
    if ! which git > /dev/null ; then  # install git(1)
        wget -N https://github.com/leorge/scripts/raw/master/inst_cmd
        chmod +x inst_cmd && ./inst_cmd git
        rm ./inst_cmd
    fi
    git clone https://github.com/leorge/scripts.git > /dev/null
    cd scripts
fi
test -d ~/bin || mkdir ~/bin
for cmd in *; do
    if [ $cmd = "README.md" ]; then
        continue
    elif [ $cmd = `basename $0` ]; then
        continue
    else
        cp $cmd ~/bin/
    fi
done
inst_cmd gawk perl
